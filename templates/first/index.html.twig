{% extends 'base.html.twig' %}

{% block title %}Poolboy gathering place{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ticket pool</h1>
    <h4><a href="{{ path('agentDash') }}">Your tickets</a></h4>
    {% for ticket in tickets %}
        <form method="post">
            <article>
                <h4>{{ ticket.id }} | {{ ticket.subject }}</h4>
                <p>{{ ticket.firstMessage }}</p>
                <p>By {{ ticket.customer.name }} | {{ ticket.customer.email }}</p>
            </article>
            <button name="assign" value="{{ ticket.id }}" type="submit">I want this ticket</button>
        </form>
    {% endfor %}
</div>
{% endblock %}
