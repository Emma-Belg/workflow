{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>
    {{ form_start(customerForm) }}
    {{ form_row(customerForm.subject) }}
    {{ form_row(customerForm.firstMessage) }}
    {{ form_row(customerForm.line) }}
    {{ form_row(customerForm.status) }}
    {{ form_row(customerForm.priority) }}
    <input type="submit">
    {{ form_end(customerForm) }}

    <p>{{ text }}</p>


</div>
{% endblock %}
