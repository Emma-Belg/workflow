{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Got a problem? Make a ticket</h1>
    <h4><a href="{{ path('app_logout') }}">Logout</a></h4>
    <a href="{{ path('customerTickets') }}">View your tickets</a>
    {{ form_start(customerForm) }}
    {{ form_row(customerForm.subject) }}
    {{ form_row(customerForm.firstMessage) }}
    <input type="submit">
    {{ form_end(customerForm) }}
    <a href="{{ path('app_logout') }}"><button>Logout</button></a>

</div>
{% endblock %}
