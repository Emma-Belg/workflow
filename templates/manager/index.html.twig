{% extends 'base.html.twig' %}

{% block title %}masters Den{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>&#x1F3CA; Ticket pool</h1>
        {% for ticket in tickets %}
            <form method="post">
                <article>
                    <h4>{{ ticket.id }} | {{ ticket.subject }}</h4>
                    <p>{{ ticket.firstMessage }}</p>
                    <p>By {{ ticket.customer.name }} | {{ ticket.customer.email }}</p>
                </article>
                <label for="assignfield">assign Id</label>
                <input name="assignfield" id="assignfield">
                <button name="assign" type="submit" value="{{ ticket.id }}">Assign this ticket</button>
                <button name="noFix" type="submit" value="{{ ticket.id }}">yeet this ticket</button>

            </form>
        {% endfor %}
    </div>
{% endblock %}
